
  
  <div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">プロフィール編集</h1>
         <%= form_with model: current_user, url: user_path, local: true do |f| %>
          <div>
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, class: 'text-white' %>
            <%= f.text_area :introduction, class: 'form-control'%>
          </div>
            <%= f.submit "編集完了", class: "btn-block btn-white" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
