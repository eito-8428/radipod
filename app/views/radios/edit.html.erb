<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">編集</h1>
<span>現在ログイン中のユーザー：<%= current_user.name %></span>
<%= form_for(@radio, url: radio_path(@radio)) do |f| %>
    <div class="field">
        <%= f.label :Audiofile %>
        <%= f.file_field :audio %>
    </div>
          
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title , autofocus: true, :placeholder =>"#{@radio.title}",class: 'form-control'%>
　　</div>
　　
　　<div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description , autofocus: true, :placeholder =>"#{@radio.description}",class: 'form-control'%>
　　</div>
    <div><%= f.submit "更新する" %></div>
<% end %>
    </div>
    </div>
  </div>
</div>