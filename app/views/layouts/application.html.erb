<!DOCTYPE html>
<html>
  <head>
    <title>Radipod</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Sawarabi+Mincho&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>  
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>

  <body>
    <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
     <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <div class="home">
        <%= link_to root_path do %>
          <span><%= image_tag "images/icons/IMG_0020.PNG", class: "navbar-brand" %></span>
        <% end %>
        <div>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <div class="white">
              <%= link_to new_radio_path do %>
                <%= image_tag 'images/icons/ei-microphone.png'%>
              <% end %>
            　<div>
            <li>
              <div class="top-list">
               <%= link_to "みんなの投稿",radios_path, class: "btn btn-white" %>
              </div>
            </li>
            
            <li>
               <div class="top-list">
              <%= link_to "マイページ",user_path(current_user.id),class: 'btn  btn-white'%>
               </div>
            </li>
            <li>
              <div class="top-list">
               <%= link_to "ログアウト",logout_path, method: :delete,class: 'btn  btn-white' %>
               </div>
            </li>
          <% else %>
            <li>
              <div class="top-list">
              <%= link_to "みんなの投稿",radios_path, class: "btn btn-white" %>
              </div>
            </li>
            <li>
              <div class="top-list">
              <%= link_to "ユーザー登録", new_user_path,class: "btn btn-white" %>
              </div>
            </li>
            <li>
              <div class="top-list">
              <%= link_to "ログイン",login_path,class: 'btn  btn-white'%>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
    <script>
      $(function(){
        $(".alert").fadeOut(4000);
      });
    </script>
  </body>
</html>
